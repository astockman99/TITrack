<Application x:Class="TITrackOverlay.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Color palette matching the web overlay -->
        <Color x:Key="BackgroundColor">#1a1a2e</Color>
        <Color x:Key="HeaderColor">#2a2a4a</Color>
        <Color x:Key="TextColor">#eaeaea</Color>
        <Color x:Key="AccentGreen">#4ecca3</Color>
        <Color x:Key="AccentRed">#e94560</Color>
        <Color x:Key="SecondaryText">#a0a0a0</Color>
        <Color x:Key="BorderColor">#3a3a5a</Color>

        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
        <SolidColorBrush x:Key="HeaderBrush" Color="{StaticResource HeaderColor}" />
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
        <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreen}" />
        <SolidColorBrush x:Key="AccentRedBrush" Color="{StaticResource AccentRed}" />
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryText}" />
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />

        <!-- Button style -->
        <Style x:Key="OverlayButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3a3a5a" />
                                <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
